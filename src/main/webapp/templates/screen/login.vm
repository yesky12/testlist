#macro (loginMessage $field)
    #if (!$field.valid)
<div style="color: red; font-weight: bold;">$field.message</div> #end
#end
<form action="" method="post">
      <input type="hidden" name="action" value="site_user_action"/>
      #set ($group = $form.login.defaultInstance)
      <strong>用户登录</strong>
    <hr/>
      #loginMessage ($group.error)
    <table border="0" cellpadding="0" cellspacing="10">
        <tr>
            <td>用户ID：</td>
            <td>
                <input type="text" name="$group.id.key" value="$!group.id.value" size="20"/>
            </td>
            <td>
                #loginMessage ($group.id)
            </td>
        </tr>
        <tr>
            <td>密码：</td>
            <td>
                <input type="password" name="$group.password.key" value="$!group.password.value" size="30"/>
            </td>
            <td>
                #loginMessage ($group.password)
            </td>
        </tr>
    </table>
    <hr/>
    <input type="submit" name="event_submit_do_login" value="  登 录  "/>
</form>