#if ($newUser)
    <div style="color: red; font-weight: bold;">成功注册用户！</div>
#end
<strong>用户信息</strong>
<hr/>
<table border="0" cellpadding="0" cellspacing="10">
    <tr>
        <td>用户ID：</td>
        <td>$user.id</td>
    </tr>
    <tr>
        <td>密码：</td>
        <td>$stringUtil.repeat("*", $user.password.length())</td>
    </tr>
    <tr>
        <td>用户名：</td>
        <td>$user.name</td>
    </tr>
    <tr>
        <td>电子邮件：</td>
        <td>$user.email</td>
    </tr>
    <tr>
        <td>心情故事：</td>
        <td>$!user.description</td>
    </tr>
</table>
<hr/>
<input type="button" value=" 修 改 " onclick="location='$workshopModule.setTarget("modifyUser.vm").addQueryData("id", $user.id)'"/>